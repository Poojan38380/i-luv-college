generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt      DateTime @default(now()) @db.Date
  password       String
  username       String   @unique
  profilePicLink String
}

model College {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now()) @db.Date

  name      String @unique
  // Reference to the User who created the college
  createdBy String @db.ObjectId

  // Array of image URLs with their respective like counts and uploader info
  images Image[]

  @@index([createdBy])
}

// Embedded type for images within the College model
model Image {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  imageURL String
  likes    Int    @default(0)

  // Reference to the User who uploaded the image
  uploadedBy String @db.ObjectId

  College   College? @relation(fields: [collegeId], references: [id])
  collegeId String?  @db.ObjectId

  @@index([uploadedBy])
}
